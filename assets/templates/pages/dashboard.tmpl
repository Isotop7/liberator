{{ define "main" }}
<section class="hero is-info">
  <div class="hero-body container has-text-centered is-widescreen">
    <p class="title">
      Hallo, Hendrik!
    </p>
    {{if .SumPageCount}}
    <p class="subtitle">
        Du hast bislang {{.SumPageCount}} Seiten gelesen.
    </p>
    {{end}}
  </div>
</section>

<section class="section">
    <div class="container is-widescreen">
        <div class="columns">
            <div class="column is-half">
                <p class="is-size-4">
                    Aktive Bücher:
                </p>
                <br>
                {{if .ActiveBooks}}
                <p>
                    <table class="table">
                        <thead>
                            <th>Titel</th>
                            <th>Autor</th>
                            <th>Sprache</th>
                            <th>Kategorie</th>
                        </thead>
                        <tbody>
                            {{range .ActiveBooks}}
                            <tr>
                                <td><a href="/book/view?id={{.Model.ID}}">{{.Title}}</a></td>
                                <td>{{.Author}}</td>
                                <td>{{.Language}}</td>
                                <td>{{.Category}}</td>
                            </tr>
                        </tbody>
                    </table>
                </p>
                {{end}}
                {{else}}
                    <p>Keine aktiven Bücher gefunden!</p>
                {{end}}
            </div>
            <div class="column is-half">
                <p class="is-size-4">
                    Neue Bücher:
                </p>
                <br>
                <p>
                    <table class="table">
                        <thead>
                            <th>Titel</th>
                            <th>Autor</th>
                            <th>Sprache</th>
                            <th>Kategorie</th>
                            <th>Erstellt am</th>
                        </thead>
                        <tbody>
                            {{range .LatestBooks}}
                            <tr>
                                <td><a href="/book/view?id={{.Model.ID}}">{{.Title}}</a></td>
                                <td>{{.Author}}</td>
                                <td>{{.Language}}</td>
                                <td>{{.Category}}</td>
                                <td>{{.Model.CreatedAt | humanDate}}</td>
                            </tr>
                            {{end}}
                        </tbody>
                    </table>
                </p>
            </div>
        </div>
    </div>
</section>
{{ end }}